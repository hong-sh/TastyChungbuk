<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">

        <!-- <item name="android:actionBarStyle">@style/MyActionBar</item> -->


        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabsTitleText</item>
        <item name="homeAsUpIndicator">@drawable/navigation_back</item>
        <item name="searchViewSearchIcon">@drawable/ic_action_search</item>
        <item name="actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/header</item>
        <item name = "android:icon">@android:color/transparent</item>
        

        <!-- Support library compatibility -->
        <!-- <item name="background">#B31D22</item> -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:paddingLeft">50dip</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">

        <!-- tab indicator -->
<!--         <item name="android:paddingLeft">32dp</item> -->
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:background">@drawable/tab_bar_background</item>
        <item name = "android:dividerHeight">0dp</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/tab_bar_background</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTabsTitleText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoTitleBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Transparent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- ratingbar Style -->

    <style name="starRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_listview</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>
    <style name="starSetRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_setrating</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>
    
    <style name="starRatingBar_small_detail" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_small_ratingbar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <style name="starRatingBar_small" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
    </style>

</resources>